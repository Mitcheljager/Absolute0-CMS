<%= render 'application/modals/modal' %>
<%= render 'application/modals/modal-new-page' %>
<%= render 'application/modals/modal-new-menu' %>
<%= render 'application/loader' %>

<div class="app app--loading">

  <%= render 'layouts/menus/menu-top' %>

  <%= render 'layouts/menus/menu-left' %>

  <div class="board theme">
    <div class="boardLogo" v-if="!currentPage">
      <h1>Absolute0</h1>
      <h2>To edit a page, select the page inside the menu on the left.</h2>
    </div>
    <%= render 'pages/admin-page' %>
    <alert v-if="flashMessage" v-bind:content="flashMessage"></alert>
  </div>

  <new-page-modal v-if="showModal === 'newPage'"></new-page-modal>
  <new-menu-modal v-if="showModal === 'newMenu'"></new-menu-modal>
</div>
