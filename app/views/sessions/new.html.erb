<div class="app login">
  <div class="background"></div>

  <div class="content">

    <%= image_tag "logoBig.png" %>

    <%= form_tag '/login' do %>
      <div class="stroke"></div>
      <%= text_field_tag :email, '', placeholder: 'Email', class: 'form__field' %>
      <%= password_field_tag :password, '', placeholder: 'Password', class: 'form__field' %>
      <%= submit_tag "Submit", class: 'btn' %>

    <% end %>
  </div>

</div>
